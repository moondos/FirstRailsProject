<h2><%= @post.title %> </h2>
<p><%= @post.body %> </p>
<hr>
<% if can? :update, @post %><%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-primary' %> <%  end %>
<% if can? :destroy, @post %><%= link_to "Delete", post_path(@post), 
                    method: :delete,
                    data: {confirm: 'Are you sure?'},
                    :class => 'btn btn-danger'%><%  end %>
<hr>

